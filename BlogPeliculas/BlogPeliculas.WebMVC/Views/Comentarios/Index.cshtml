@model IEnumerable<BlogPeliculas.Modelos.Comentario>

@{
    ViewData["Title"] = "Comentarios";
}

<h1>Comentarios</h1>

<p>
    <a asp-action="Create">Agregar comentario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contenido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recomendar)
            </th>
            <th>
                Película
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contenido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recomendar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pelicula.Titulo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.Id }) |
                    @Html.ActionLink("Detalles", "Details", new {  id=item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
